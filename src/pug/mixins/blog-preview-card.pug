mixin blog-preview-card(data)
  .blog-preview-card
    img(src=`./assets/img/${data.imgLeftPath}` alt="Цветы" width="410" height="465")
    img(src=`./assets/img/${data.imgMiddlePath}` alt="Цветы" width="560" height="630")

    .blog-preview-card-content
      .blog-preciew-card-count <span class="blog-preciew-card-count-current">02</span> \ <span class="blog-preciew-card-count-total">03</span>
      .blog-preview-card-content-title!= data.title
      .blog-preview-card-content-date!= data.date
      .blog-preview-card-content-text!= data.text

      a(href="#").blog-preview-card-content-link Подробнее

      .blog-preview-card-navigation
        button.blog-preview-card-btn-prev Назад
        button.blog-preview-card-btn-next Вперед

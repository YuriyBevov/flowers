mixin product-card(data)
  .product-card
    .product-card__top
      img(src=`./assets/img/mock/${data.img}` alt= data.title width= data.imgW height= data.imgH)
      .product-card__top-left
        .product-card-badge -20%
        .product-card-badge TOP
      .product-card__top-right
        include ../components/favourite-btn
        include ../components/show-btn

        include ../components/add-to-cart-btn
    .product-card__bottom
      span.product-card__category!= data.category
      h3.product-card__title!= data.title
      span.product-card__price!= data.price + '<span> руб.</span>'
